{% extends "admin/base.html.twig" %}

{% block stylesheets %}
	<link rel="stylesheet" href="">
{% endblock %}

{% block main %}
	<div class="container">
		<a href="{{ path('create_admin_commande')}}">Ajouter une Commande</a>

	</div>

	<div class="container">

		<table class="table">
			<thead>
				<tr>
					<th scope="col">Commande</th>
					<th scope="col">Membre</th>
					<th scope="col">Véhicule</th>
					<th scope="col">Date et heure de départ</th>
					<th scope="col">Date et heure de fin</th>
					<th scope="col">Prix total</th>
					<th scope="col">Date et heure d'enregistrement'</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			{% for commande in commandes %}
				<tbody>
					<tr>

						<td scope="row"><a href="{{ path('admin_commande_show', {'id' : commande.id}) }}">{{ commande.id }}</a></td>
						<td scope="row">{{ commande.user.email }}</td>
                        <td scope="row">{{ commande.vehicule.titre }}</td>
						<td scope="row">{{ commande.dateHeureDepart | date('d-m-Y h:m')  }} </td>
						<td scope="row">{{ commande.dateHeureFin | date('d-m-Y h:m') }} </td>
						<td scope="row">{{ commande.prixTotal }} €</td>
						<td scope="row">{{ commande.dateEnregistrement | date('d-m-Y h:m') }}</td>
						<td>
							<a href="{{ path('admin_commande_update', {'id' : commande.id}) }}">
								<i class="fa-solid fa-pen"></i>
							</a>
							<a href=" {{ path('delete_admin_commande', {'id' : commande.id}) }}">
								<i class="fa-solid fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>

		</div>

	{% endblock %}
